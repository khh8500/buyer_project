{{> /layout/header}}

<style>
    .card:hover {
        box-shadow: 0 4px 24px 0 rgba(0, 0, 0, 0.14);
        transition: all .3s ease-in-out;
    }

    /* 이미지가 카드의 크기를 넘지 않도록 설정 */
    .card img {
        max-width: 100%; /* 이미지의 최대 너비를 카드의 너비에 맞춤 */
        max-height: 100%; /* 이미지의 최대 높이를 카드의 높이에 맞춤 */
        object-fit: cover; /* 이미지의 비율을 유지하면서, 빈 공간 없이 컨테이너를 채움 */
    }
</style>

